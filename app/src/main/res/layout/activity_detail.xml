<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="cityItem"
            type="com.seosh.simpleweather.repository.data.CityItem" />
        
        <variable
            name="weather"
            type="com.seosh.simpleweather.api.data.Weather" />

        <variable
            name="climate"
            type="com.seosh.simpleweather.api.data.Climate" />

        <variable
            name="viewModel"
            type="com.seosh.simpleweather.viewmodel.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_202020">

        <include
            android:id="@+id/layoutTopBar"
            layout="@layout/layout_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:background="@color/color_gray_202020"
            app:layout_constraintTop_toBottomOf="@+id/layoutTopBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_weather"
                        android:textSize="20sp"
                        android:textColor="@color/color_white_FFFFFF"
                        android:fontFamily="@font/nanum_gothic"
                        android:background="@drawable/bg_gray_under_line"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageWeather"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center"
                                app:bindImage="@{viewModel.getImageUrl(weather.icon)}"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@{viewModel.getTemperature(climate.temperature)}"
                                android:textSize="40sp"
                                android:textColor="@color/color_white_FFFFFF"
                                android:fontFamily="@font/nanum_gothic"/>

                            <TextView
                                android:id="@+id/textWeatherDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{weather.desc}"
                                android:textSize="20sp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/color_white_FFFFFF"
                                android:fontFamily="@font/nanum_gothic"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="start|center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="5dp">

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_gray_C0C0C0"
                                        android:layout_marginEnd="10dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/text_max_temp"
                                        android:textSize="12sp"
                                        android:textColor="@color/color_white_FFFFFF"
                                        android:fontFamily="@font/nanum_gothic"/>

                                    <TextView
                                        android:id="@+id/textHighTemper"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.getTemperature(climate.maxTemp)}"
                                        android:textSize="12sp"
                                        android:gravity="end"
                                        android:textColor="@color/color_white_FFFFFF"
                                        android:fontFamily="@font/nanum_gothic"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_gray_C0C0C0"
                                        android:layout_marginEnd="10dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/text_min_temp"
                                        android:textSize="12sp"
                                        android:textColor="@color/color_white_FFFFFF"
                                        android:fontFamily="@font/nanum_gothic"/>

                                    <TextView
                                        android:id="@+id/textLowTemper"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.getTemperature(climate.minTemp)}"
                                        android:textSize="12sp"
                                        android:gravity="end"
                                        android:textColor="@color/color_white_FFFFFF"
                                        android:fontFamily="@font/nanum_gothic"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_location"
                        android:textSize="20sp"
                        android:textColor="@color/color_white_FFFFFF"
                        android:fontFamily="@font/nanum_gothic"
                        android:background="@drawable/bg_gray_under_line"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="10dp"/>

                    <fragment
                        android:id="@+id/googleMap"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        tools:context=".DetailActivity"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>